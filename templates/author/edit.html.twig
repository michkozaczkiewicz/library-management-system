{% extends "base.html.twig" %}

{% block body %}
	<div class="wrapper">
		<div class="main-container">
			<div class="item">

				<h1>Edit an author</h1>
			</div>
			<div class="item">
				<a href="{{ path('author.index') }}" class="btn btn-primary">Authors List</a>
				<a href="{{ path('author.createAuthor') }}" class="btn btn-primary">Create Author</a>
			</div>
			<div class="item">
				{{ form_start(form) }}

				<div class="container">
					{{ form_row(form.name) }}
					{{ form_row(form.save) }}
				</div>

				{{ form_end(form) }}

			</div>
		</div>
	</div>
{% endblock %}
